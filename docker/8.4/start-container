#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

echo "ðŸ‘‰ Instalando dependencias de PHP (Composer)..."
composer install

echo "ðŸ‘‰ Generando clave de aplicaciÃ³n..."
php artisan key:generate

echo "ðŸ‘‰ Ejecutando migraciones y seeders..."
php artisan migrate --seed

echo "ðŸ‘‰ Instalando dependencias de Node..."
npm install

echo "ðŸ‘‰ Compilando assets con Vite..."
npm run build

echo "âœ… Laravel listo."


if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
